#!/usr/bin/env zsh


if [[ $# -lt 1 ]]; then
	echo "Usage: $0 [COMMAND]"
	exit 1
fi

while [[ $# -gt 1 ]]; do
	case $1 in
		"--help"|"-h")
			echo "Help not implemented yet :)."
			;;
		"--")
			shift
			break
			;;
	esac
	shift
done

COMMAND=$@


if [[ $COMMAND = "" ]]; then
	echo "Ended up with invalid command: '$COMMAND'"
	exit 1
fi

echo "nohup: $COMMAND"
nohup $COMMAND > /dev/null & disown
