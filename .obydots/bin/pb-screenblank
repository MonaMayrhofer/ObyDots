#!/bin/bash 

sleep_pid=0
to=0

updateTo() {
    to=$(xset q | sed -n "s/^.*timeout: *\([0-9]\+\).*$/\1/p")
}

toggle() {
    updateTo
    if [[ to -eq "0" ]]; then
		xset s on && notify-send -h string:synchronous:true -u low -t 500 -a "Screen Saver" "enabled"
    else
		xset s off && notify-send -h string:synchronous:true -u low -t 500 -a "Screen Saver" "disabled"
    fi
    if [ "$sleep_pid" -ne 0 ]; then
        kill $sleep_pid >/dev/null 2>&1
    fi
}


trap "toggle" USR1

while true; do
    updateTo
    if [[ to -eq "0" ]]; then
	# Screensaver: Off
	echo ""
    else
	# Screensaver: On
	echo ""
    fi
    sleep 6000 & sleep_pid=$!
    wait
done
