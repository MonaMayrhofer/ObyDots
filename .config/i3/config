# xss-lock grabs a logind suspend inhibit lock and will use i3lock to lock the
# screen before suspend. Use loginctl lock-session to lock your screen.
exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock --nofork -i ~/obydots/ternary-design/background_nb.png -k --inside-color=9d59d2 --ring-color=f9f5f0 --insidever-color=9d59d2 --ringver-color=7d3ab1 --insidewrong-color=9d59d2 --ringwrong-color=ed7e7a --line-color=7d3ab1 --keyhl-color=7d3ab1 --bshl-color=ddd60e --greeter-color=ffffff --layout-color=f9f5f0 --time-color=f9f5f0 --date-color=f9f5f0 --verif-color=f9f5f0 --wrong-color=f9f5f0 --modif-color=f9f5f0 --verif-text="" --wrong-text="" --time-font="JetBrainsMono NF" --date-font="JetBrainsMono NF" --timeoutline-width=20
